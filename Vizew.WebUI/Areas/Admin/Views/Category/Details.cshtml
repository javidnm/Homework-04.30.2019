@model Vizew.WebUI.Models.Entity.Category

@{
    ViewBag.Title = "Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="sparkline12-list">
                <div class="sparkline12-graph">
                    <div class="basic-login-form-ad">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="all-form-element-inner">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", disabled = "" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label" })
                                        <i class="fa fa-@(Model.IsActive?"check":"square")"></i>
                                    </div>
                                    <div class="form-group">
                                        <a href="@Url.Action( "Index")" class="btn btn-sm btn-danger">İmtina et</a>
                                        <a href="@Url.Action( "Edit", routeValues: new {id = Model.Id})" class="btn btn-sm btn-primary">Redaktə et</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
