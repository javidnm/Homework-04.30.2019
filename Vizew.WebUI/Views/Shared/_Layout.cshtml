    <script>
        $('div.classynav li').removeClass('active');

        //$('div.classynav a[href="' + window.location.pathname + '"]').closest('li').addClass('active');

        $('div.classynav a[href="' + window.location.pathname + '"]').closest('li').each(function (index, item) {
            var parent = $(item).closest('li.megamenu-item')[0];
            if (parent != undefined) {
                $(parent).addClass('active');
                return;
            }

            parent = $(item).closest('li.cn-dropdown-item')[0];
            if (parent != undefined) {
                $(parent).addClass('active');
                return;
            }

            $(item).addClass('active');
        });
    </script>

